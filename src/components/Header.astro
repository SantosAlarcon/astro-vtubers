---
import { Image } from "astro:assets";
---

<header transition:animate="none">
    <a href="/"
        ><Image
            src="/hololive-logo.svg"
            width="320"
            height="106"
            alt="HoloLive logo"
        /></a
    >
</header>
<style>
    header {
        border-bottom: 1px #666 solid;
        height: 64px;
        display: grid;
        place-items: center;
        padding: 2em 0;
        
        & a {
            position: absolute;
            text-align: center;
        }

        @media (width < 720px) {
            padding: 1em 0;
        }
    }

    @media (width < 720px) {
        header img {
            width: 50%;
            margin: 0 auto;
        }
    }
</style>
